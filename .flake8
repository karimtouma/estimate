[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .tox,
    venv,
    env,
    build,
    dist,
    temp,
    output,
    logs,
    input
ignore = 
    E203,
    E501,
    W503,
    F401,
    F841,
    F811,
    F821,
    W291,
    W293,
    C901,
    F541,
    E226,
    E722
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
max-complexity = 15
